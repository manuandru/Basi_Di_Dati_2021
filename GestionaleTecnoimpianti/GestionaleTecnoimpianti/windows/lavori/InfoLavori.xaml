        <DataGrid x:Name="TurniLavorativiDataGrid" HorizontalAlignment="Left" Height="260" Margin="400,140,0,0" VerticalAlignment="Top" Width="360" MouseDoubleClick="TurniLavorativi_DataGrid_Double_Click" />

